<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button data-target="#bs-example-navbar-collapse-2" data-toggle="collapse" class="navbar-toggle collapsed" type="button">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <div id="bs-example-navbar-collapse-2" class="collapse navbar-collapse">
      <ul class="nav navbar-nav" style="overflow: visible;">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Find by <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#">User Name</a></li>
