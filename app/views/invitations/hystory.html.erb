<h1 class="title">Invitations</h1>

<div class="row">
  <div class="col-md-6">
    <div class="dropdown">
      <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
        Select Filter
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Email</a></li>
        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Reference ID</a></li>
        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Status</a></li>
        <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Date</a></li>
      </ul>
    </div>
  </div>
  <div class="col-md-6">
    <div class="pull-right">
        <input type="button" class="btn btn-success" value="Export" />
        <input type="button" class="btn btn-danger" value="Cancel queued" />
    </div>
  </div>
</div>

<br />
<br />

<div class="row">
  <div class="col-md-6">
    <h5>Showing 1-20</h5>
  </div>
  <div class="col-md-6">
    <nav class="pull-right">
      <ul class="pagination" style="margin: 0;">
        <li class="disabled"><a aria-label="Previous" href="#"><span aria-hidden="true">«</span></a></li>
        <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>
        <li><a aria-label="Next" href="#"><span aria-hidden="true">»</span></a></li>
      </ul>
    </nav>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Customer email</th>
        <th>Status</th>
        <th>Created</th>
        <th>Sent</th>
        <th>Reference ID</th>
      </tr>
      </thead>
      <tbody>
          <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.email %></td>
                <td class="text-success state-<%= customer.state %>">
                  <span><%= InvitationState.get_name(customer.state) %></span>
                </td>
                <td><%= time_ago_in_words(customer.created_at) %></td>
                <td>-</td>
                <td class="text-center"><%= customer.orderId %></td>
              </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>


