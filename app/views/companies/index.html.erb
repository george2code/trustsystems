<h1>Listing companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Homesite</th>
      <th>Slug</th>
      <th>Country</th>
      <th>City</th>
      <th>Zip</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Logo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.description %></td>
        <td><%= company.home_site %></td>
        <td><%= company.slug %></td>
        <td><%= company.country_id %></td>
        <td><%= company.city_id %></td>
        <td><%= company.zip %></td>
        <td><%= company.email %></td>
        <td><%= company.phone %></td>
        <td><%= company.address %></td>
        <td><%= company.logo %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

