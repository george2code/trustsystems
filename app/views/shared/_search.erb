<%= form_tag({:controller => 'home', :action => 'search', :method => 'get'}, {:class => 'navbar-form navbar-right'}) do %>
    <%= text_field_tag :search, params[:search], :id => 'search_field', :class => 'form-control', :placeholder => 'Search company' %>
    <%= submit_tag "Search", :name => nil, :class => 'btn btn-default' %>
<% end %>