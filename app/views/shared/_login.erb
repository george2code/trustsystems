<% if current_user.present? %>

    <ul class="nav navbar-nav">
      <li class="active"><a href="#">Категории</a></li>
      <li><a href="#">Для компаний</a></li>
    </ul>

<% else %>


    <ul class="top-login-links navbar-right">
      <li><%= link_to 'Login', new_user_session_path, class: "btn btn-success" %></li>
      <li><%= link_to 'Sign Up', new_user_registration_path, class: "btn btn-danger" %></li>
    </ul>


    <form class="navbar-form navbar-right" role="form">
      <div class="form-group">
        <input type="text" placeholder="Email" class="form-control">
      </div>
      <div class="form-group">
        <input type="password" placeholder="Password" class="form-control">
      </div>
      <button type="submit" class="btn btn-success">Sign in</button>
       &nbsp;or&nbsp;
      <button type="button" class="btn btn-danger">Sign Up</button>
    </form>

<% end %>