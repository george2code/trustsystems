<% provide(:title, 'Forgot') %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <h2>Forgot your password?</h2>

    <%= f.label :email, :class => 'sr-only' %><br />
    <%= f.email_field :email, autofocus: true, placeholder: 'Email address', class: 'form-control', id: 'inputEmail' %>

    <br />
    <%= f.submit "Send me reset password", :class => 'btn btn-lg btn-primary btn-block' %>
    <br />
    <%= render "devise/shared/links" %>
<% end %>