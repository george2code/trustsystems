<!DOCTYPE html>
<html>
    <head>
      <title>Trustsystems</title>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
      <%= csrf_meta_tags %>
    </head>
    <body>

        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
          <div class="container">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                      aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="/"></a>
            </div>

            <div id="navbar" class="navbar-collapse collapse">
              <%= render "shared/login" %>
            </div><!--/.navbar-collapse -->
          </div>
        </nav>


        <nav class="navbar search-panel">
          <div class="container">
            <ul class="nav nav-pills pull-left">
              <li role="presentation"><a href="#"><%= image_tag('ico_vk.jpg', :alt => 'Vkontakte') %></a></li>
              <li role="presentation"><a href="#"><img src="/assets/ico_fb.jpg" alt="" /></a></li>
              <li role="presentation"><a href="#"><img src="/assets/ico_tw.jpg" alt="" /></a></li>
              <li role="presentation"><a href="#"><img src="/assets/ico_gplus.jpg" alt="" /></a></li>
            </ul>
            <form class="navbar-form navbar-right" role="search">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Search">
              </div>
              <button type="submit" class="btn btn-default">Submit</button>
            </form>
          </div>
        </nav>

        <div class="container">
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>

          <!-- Example row of columns -->
          <%= yield %>
        </div> <!-- /container -->

        <footer class="footer">
          <div class="container">
            <ul class="nav nav-pills">
              <li role="presentation"><a href="#">О компании</a></li>
              <li role="presentation"><a href="#">ЧАВО</a></li>
              <li role="presentation"><a href="#">Контакты</a></li>
              <li role="presentation"><a href="#">Блог</a></li>
              <li role="presentation"><a href="#">Условия</a></li>
              <li role="presentation"><a href="#">Политика концфиденциальности</a></li>
              <li role="presentation"><a href="#">Бизнес решения</a></li>
            </ul>
          </div>
        </footer>

    </body>
</html>