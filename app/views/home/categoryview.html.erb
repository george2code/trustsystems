<div class="row">
  <div class="col-md-3">
    <h3>Категории</h3>
    <br />

    <div class="sidebar-nav">
      <div class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <span class="visible-xs navbar-brand">Sidebar menu</span>
        </div>
        <div class="navbar-collapse collapse sidebar-navbar-collapse">
          <%= categories_menu(@root_categories, params[:id]).html_safe %>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>

  <div class="col-md-9 categories">
    <h3>Лучшие компании в категории: <%= @category.name %></h3>
    <br />

    <% @companies.each_with_index  do |company, i| %>
    <div class="row">
      <div class="col-md-12 company-item">
        <p><strong><a href="/companies/<%= company.slug %>"><%= i+1 %>. <%= company.name %></a></strong></p>
        <div class="clearfix">
          <ul class="rate pull-left">
            <li><a href="#"></a></li>
            <li><a href="#"></a></li>
            <li><a href="#"></a></li>
            <li><a href="#"></a></li>
            <li><a href="#"></a></li>
          </ul>
          <p><%= company.reviews.count %> отзывов | Trustcore 7.4</p>
        </div>
        <% if company.reviews.exists? %>
            <p><%= company.reviews.last.review_full %></p>
        <% end %>
      </div>
    </div><!-- end row -->
        <% end %>

  </div>
</div>