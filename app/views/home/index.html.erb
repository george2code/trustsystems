<div class="row">
  <div class="col-md-4">

    <div class="panel panel-default pn-login-social">
      <div class="panel-body text-center">
        <h4>Присоеденяйтесь. Подключайтесь<br /> к нам через социальные сети</h4>
        <ul class="social-icons-login">
          <li>
            <%= link_to 'Войти через "Vkontakte"', user_omniauth_authorize_path(:vkontakte), :class => 'vk' %>
          </li>
          <li>
            <%= link_to 'Войти через "Google+"', user_omniauth_authorize_path(:google_oauth2), :class=>'gl' %>
          </li>
          <li>
            <%= link_to 'Войти через "Facebook"', user_omniauth_authorize_path(:facebook), :class => 'fb' %>
          </li>
        </ul>
      </div>
    </div>


    <div class="latest-reviews">
        <div class="review-header clearfix">
            <h5 class="pull-left">Люди пишут</h5>
            <%= link_to 'списком', reviews_path, :class => 'list pull-right' %>
        </div>
        <% @latest_reviews.each do |review| %>
            <%= render 'shared/review/latest_review', :review => review %>
        <% end %>
    </div>
  </div><!-- left column -->


  <div class="col-md-8">
    <div class="row presentation text-center">
      <img src="<%= asset_path('video_bg.png') %>" alt="" />
    </div>

    <br />

    <div class="row">
        <%= render 'shared/review/review_of_the_day', :review => @day_review %>
    </div>



    <!-- Render TOP 10 Categories -->
    <%= render 'top_categories', :categories => @top_categories %>

  </div>
</div>